<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lblreview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:onClick="Reviewslist"
    tools:context="com.example.pet_care_app.insertReview">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="254dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="76dp"
        android:text="Insert Review"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/re_uname"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_clname" />

    <EditText
        android:id="@+id/re_review"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Review"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_uname" />

    <EditText
        android:id="@+id/re_clname"
        android:layout_width="279dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Caregiver Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <Button
        android:id="@+id/button19"
        android:layout_width="204dp"
        android:layout_height="57dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="104dp"
        android:onClick="insert_Reviews"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_review" />

    <Button
        android:id="@+id/lre_list"
        android:layout_width="204dp"
        android:layout_height="57dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="104dp"
        android:onClick="Reviewslist"
        android:text="Review List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_review" />

</androidx.constraintlayout.widget.ConstraintLayout>